{
  "name": "workspace",
  "version": "1.0.0",
  "description": "pnpm workspace with backend, frontend, worker, and shared packages",
  "private": true,
  "packageManager": "pnpm@8.15.0",
  "engines": {
    "node": "20.10.0"
  },
  "scripts": {
    "build": "pnpm -r build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "test:unit": "pnpm -r test:unit",
    "test:integration": "pnpm --filter backend test:integration",
    "test:e2e": "pnpm --filter e2e-tests test",
    "test:coverage": "pnpm -r test:coverage",
    "dev": "pnpm -r --parallel dev",
    "clean": "pnpm -r clean",
    "backend:db:generate": "pnpm --filter backend db:generate",
    "backend:db:migrate": "pnpm --filter backend db:migrate",
    "backend:db:reset": "pnpm --filter backend db:reset",
    "backend:db:seed": "pnpm --filter backend db:seed",
    "backend:db:studio": "pnpm --filter backend db:studio"
  },
  "pnpm": {
    "overrides": {},
    "peerDependencyRules": {
      "ignoreMissing": []
    }
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "eslint": "^8.55.0",
    "prettier": "^3.1.0",
    "typescript": "^5.3.3"
  }
}
