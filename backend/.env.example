# Database Configuration
# PostgreSQL connection URL
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/arbitrage_db?schema=public"

# Redis Configuration
# Redis connection URL for caching and real-time data
REDIS_URL="redis://localhost:6379"

# External API Keys
# Gate.io API credentials for exchange integration
GATE_API_KEY="your_gate_api_key_here"
GATE_API_SECRET="your_gate_api_secret_here"

# KyberSwap RPC URL for blockchain interactions
KYBER_RPC_URL="https://mainnet.infura.io/v3/your_project_id"

# Error Tracking
# Sentry DSN for error monitoring and reporting
SENTRY_DSN="https://your_sentry_dsn@sentry.io/project_id"

# Monitoring
# Prometheus metrics port
PROM_PORT="9090"

# Application Configuration
# Node environment (development, production, test)
NODE_ENV="development"

# Server port
PORT="3000"

# Logging level (debug, info, warn, error)
LOG_LEVEL="info"

# Trading Configuration
# Minimum spread percentage to consider an opportunity
MIN_SPREAD_THRESHOLD="1.5"

# Maximum investment per trade in USDT
MAX_INVESTMENT="10000"

# Scan interval in seconds
SCAN_INTERVAL="60"
