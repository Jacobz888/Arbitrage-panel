{
  "name": "worker",
  "version": "1.0.0",
  "description": "BullMQ-powered scanner worker",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "start": "tsx src/index.ts",
    "dev": "tsx watch src/index.ts",
    "lint": "eslint src",
    "test": "vitest run",
    "test:unit": "vitest run",
    "test:watch": "vitest watch",
    "test:coverage": "vitest run --coverage",
    "clean": "rm -rf dist *.tsbuildinfo"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "@sentry/node": "^10.26.0",
    "@shared/market-adapters": "workspace:*",
    "@shared/typings": "workspace:*",
    "bullmq": "^5.7.14",
    "dotenv": "^16.4.5",
    "ioredis": "^5.3.2",
    "pino": "^10.1.0"
  },
  "devDependencies": {
    "@types/node": "^20.10.5",
    "@typescript-eslint/eslint-plugin": "^6.13.2",
    "@typescript-eslint/parser": "^6.13.2",
    "@vitest/coverage-v8": "^1.2.2",
    "eslint": "^8.55.0",
    "tsx": "^4.20.6",
    "typescript": "^5.3.3",
    "vitest": "^1.2.2"
  }
}
